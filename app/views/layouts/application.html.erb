<!DOCTYPE html>
<html>
  <head>
    <title><%= @title || "Meetups" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript">
      <% if logged_in? %>
          window.currentUser = <%= render("api/user.json.jbuilder",
          user: current_user).html_safe =%>
      <% end %>
    </script>
    <script type="text/javascript">
      window.cloudinary_opts = {
        cloud_name: "<%= ENV['CLOUD_NAME'] %>",
        upload_preset: "<%= ENV['UPLOAD_PRESET'] %>"
      };
    </script>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700|Roboto:100,300,400,500,700" rel="stylesheet">
    <script src="http://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDclR_jsG8lBK1Z-YfLHAdBoUc_V824uL4&libraries=places"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-103685439-2', 'auto');
      ga('send', 'pageview');
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
